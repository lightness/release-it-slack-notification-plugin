{
  "git": {
    "commitMessage": "docs(release): v${version}"
  },
  "npm": {
    "publish": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          }
        ]
      }
    },
    "./index.js": {
      "slackMessageTitle": "@lightness/release-it-slack-notification-plugin"
    }
  }
}